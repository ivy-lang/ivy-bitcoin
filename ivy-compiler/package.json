{
  "name": "bitcoin-ivy",
  "description": "Compiler for Ivy, Chain's smart contract language.",
  "version": "0.0.1",
  "dependencies": {
    "bcoin": "git+https://github.com/danrobinson/bcoin.git#compat",
    "level-js": "^2.2.4"
  },
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/mocha": "^2.2.44",
    "@types/node": "^7.0.46",
    "chai": "^4.1.2",
    "mocha": "^3.5.3",
    "pegjs": "^0.10.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.6.0",
    "typescript": "^2.5.3"
  },
  "license": "MIT",
  "main": "lib/index.js",
  "scripts": {
    "build": "npm run compile-tsc && npm run compile-pegjs",
    "clean": "rm -rf lib",
    "compile-pegjs": "pegjs -o lib/parser.js src/parser.pegjs",
    "compile-tsc": "tsc",
    "test":
      "mocha src/test/*.ts --compilers ts:./node_modules/ts-node/register,tsx:./node_modules/ts-node/register"
  },
  "types": "./lib/index.d.ts"
}
